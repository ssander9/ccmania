<h1>Compare Card Rewards</h1>

<table class="table-fixed">
  <thead>
    <tr>
      <th class="px-4 py-2 transform -rotate-45">Credit Card</th>
      <th class="px-4 py-2 transform -rotate-45">Gas</th>
      <th class="px-4 py-2 transform -rotate-45">Transit</th>
      <th class="px-4 py-2 transform -rotate-45">Rideshare</th>
      <th class="px-4 py-2 transform -rotate-45">Entertainment</th>
      <th class="px-4 py-2 transform -rotate-45">Streaming</th>
      <th class="px-4 py-2 transform -rotate-45">Dining</th>
      <th class="px-4 py-2 transform -rotate-45">Grocery</th>
      <th class="px-4 py-2 transform -rotate-45">Drugstore</th>
      <th class="px-4 py-2 transform -rotate-45">Department Store</th>
      <th class="px-4 py-2 transform -rotate-45">Clothing</th>
      <th class="px-4 py-2 transform -rotate-45">Travel</th>
      <th class="px-4 py-2 transform -rotate-45">Other</th>
    </tr>
  </thead>
  <tbody>
    <% @credit_card.each do |credit_card| %>
      <tr>
        <td> <%= credit_card.card_name %> </td>
        <td> <%= credit_card.gas %> </td>
        <td> <%= credit_card.transit %> </td>
        <td> <%= credit_card.rideshare %> </td>
        <td> <%= credit_card.entertainment %> </td>
        <td> <%= credit_card.streaming %> </td>
        <td> <%= credit_card.dining %> </td>
        <td> <%= credit_card.grocery %> </td>
        <td> <%= credit_card.drugstore %> </td>
        <td> <%= credit_card.department_store %> </td>
        <td> <%= credit_card.clothing %> </td>
        <td> <%= credit_card.travel %> </td>
        <td> <%= credit_card.other %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
