<h1>See how your card stacks up!</h1>

<div>
  <% @credit_card.each do |credit_card| %>
    <div class="flex mt-6 mb-6 rounded-lg border border-gray-400 bg-white w-1/2">
      <div class="p-4 w-1/3 h-64">
        <p class="text-blue-500 hover:text-blue-300 font-semibold"><%= link_to "#{credit_card.card_provider.to_s.titlecase} #{credit_card.card_name.titlecase}", credit_card_path(credit_card.handle) %></p>
        <img class="mt-4 rounded shadow-lg" src="<%="img/cards/#{credit_card.card_provider.to_s.downcase.parameterize}-#{credit_card.card_name.downcase.parameterize}.png"%>" alt="Credit Card">
      </div>
      <div class="text-gray-700 p-4 w-1/3">
        <h1 class="text-gray-800 font-semibold">Points & Rewards</h1>
        <% if credit_card.gas>=2 %>
          <p class="mt-2 text-gray-700"> Gas: <%= credit_card.gas %> </p>
        <% end %>
        <% if credit_card.transit>=2 %>
          <p class="mt-2 text-gray-700"> Transit: <%= credit_card.transit %> </p>
        <% end %>
        <% if credit_card.rideshare>=2 %>
          <p class="mt-2 text-gray-700"> Rideshare: <%= credit_card.rideshare %> </p>
        <% end %>
        <% if credit_card.entertainment>=2 %>
          <p class="mt-2 text-gray-700"> Entertainment: <%= credit_card.entertainment %> </p>
        <% end %>
        <% if credit_card.streaming>=2 %>
          <p class="mt-2 text-gray-700"> Streaming: <%= credit_card.streaming %> </p>
        <% end %>
        <% if credit_card.dining>=2 %>
          <p class="mt-2 text-gray-700"> Dining: <%= credit_card.dining %> </p>
        <% end %>
        <% if credit_card.grocery>=2 %>
          <p class="mt-2 text-gray-700"> Grocery: <%= credit_card.grocery %> </p>
        <% end %>
        <% if credit_card.drugstore>=2 %>
          <p class="mt-2 text-gray-700"> Drugstore: <%= credit_card.drugstore %> </p>
        <% end %>
        <% if credit_card.department_store>=2 %>
          <p class="mt-2 text-gray-700"> Department Store: <%= credit_card.department_store %> </p>
        <% end %>
        <% if credit_card.clothing>=2 %>
          <p class="mt-2 text-gray-700"> Clothing: <%= credit_card.clothing %> </p>
        <% end %>
        <% if credit_card.travel>=2 %>
          <p class="mt-2 text-gray-700"> Travel: <%= credit_card.travel %> </p>
        <% end %>
        <% if credit_card.other>=2 %>
          <p class="mt-2 text-gray-700"> Other: <%= credit_card.other %> </p>
        <% end %>
          <p class="mt-2 text-gray-700"> All Purchases: <%= credit_card.other%></p>
      </div>
      <div class="p-4 w-1/3">
        <p class="font-semibold">Highlights</p>
      </div>
    </div>
  <% end %>
</div>

