      <td class="text-sm text-center bg-white border-b border-gray-400"> <%= credit_card.department_store %> </td>
      <td class="text-sm text-center bg-white border-b border-gray-400"> <%= credit_card.clothing %> </td>
      <td class="text-sm text-center bg-white border-b border-gray-400"> <%= credit_card.travel %> </td>
      <td class="text-sm text-center bg-white border-b border-gray-400"> <%= credit_card.other %> </td>
      <td class="px-2 text-sm text-center bg-white border-b border-gray-400 text-blue-500 hover:text-blue-300 "> 
      <% if current_user && current_user.is_admin %>
        <%= link_to 'Edit', edit_credit_card_path(credit_card) %>
      <% end %> </td>
      <td class="px-2 text-sm text-center bg-white border-b border-r-2 border-gray-400 text-blue-500 hover:text-blue-300 "> 
      <% if current_user && current_user.is_admin %>
        <%= link_to 'Delete', credit_card_path(credit_card),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
