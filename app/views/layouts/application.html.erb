<!DOCTYPE html>
<html>
  <head>
    <title>CCMania</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag asset_path('favicon.ico') %>

  </head>

  <body class="bg-gray-100">
    <nav class="bg-white border">
      <ul class="flex items-center">
        <li class="px-8 py-4">
          <a href="/">
            <img class="h-8 mt-1 hover:bg-gray-100" src="/img/ccmania_logo.png" alt="CCMania">
          </a>
        </li>
        <li class="px-8 py-4">
          <a href="/about_us" class="text-blue-500 hover:text-blue-300 text-lg">About Us</a>
        </li>
        <li class="px-8 py-4">
          <a href="/contact" class="text-blue-500 hover:text-blue-300 text-lg">Contact</a>
        </li>
        <li class="px-8 py-4">
          <a href="/credit_cards" class="text-blue-500 hover:text-blue-300 text-lg">Credit Cards</a>
        </li>
        <% if current_user %>
        <li class="px-8 py-4 text-right">
          <%= link_to 'My Profile', user_path(current_user.id), class: 'text-blue-500 hover:text-blue-300 text-lg' %>
        </li>
        <li class="px-8 py-4 text-right">
          <%= link_to 'Log out', logout_path, method: :delete, class: 'text-blue-500 hover:text-blue-300 text-lg' %>
        </li>
        <% else %>
        <li class="px-8 py-4 text-right">
          <a href="/login" class="text-blue-500 hover:text-blue-300 text-lg">Log in / Sign up</a>
        </li>
        <% end %>
       
      </ul>    
    </nav>
    <hr>
    <hr>
    <div class="p-8 text-lg">
      <%= yield %>
    </div>
  </body>
</html>

<script>
export default {
  data() {
    return {
      isOpen: false
    }
  }
}
</script>
